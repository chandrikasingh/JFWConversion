<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#9e9e9e" />
            <stroke
                android:width="1dp"
                android:color="#d3d3d3" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#EAE8E4"
                android:endColor="#fff8E4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#767676" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
